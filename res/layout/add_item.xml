<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/buy_green_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sprite_greenhaws"/>
    <ImageView
        android:id="@+id/buy_drill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sprite_drill"/>
    <ImageView
        android:id="@+id/buy_house_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sprite_haws"/>
    <ImageView
        android:id="@+id/buy_house_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sprite_haws2"/>
</LinearLayout>